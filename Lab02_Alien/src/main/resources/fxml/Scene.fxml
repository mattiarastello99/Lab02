<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="343.0" prefWidth="513.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.alien.FXMLController">
   <top>
      <Label text="Lab 2 - Alien Translator" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Alien text:" />
                  <TextField fx:id="txtInsert" prefHeight="25.0" prefWidth="251.0">
                     <HBox.margin>
                        <Insets left="20.0" right="100.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnTraslate" defaultButton="true" mnemonicParsing="false" onAction="#doTraslate" text="Traslate">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="txtArea" editable="false">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
   </center>
   <bottom>
      <Button fx:id="btnClear" mnemonicParsing="false" onAction="#doClear" text="Clear all" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="400.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
